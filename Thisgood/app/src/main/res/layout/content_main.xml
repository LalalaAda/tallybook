<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tuzhida.thisgood.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardBackgroundColor="#0089A7"
        android:outlineProvider="background"
        >
        <com.tuzhida.myview.MyProcessBar
            android:id="@+id/budge_pb"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"
            android:gravity="bottom">
        </com.tuzhida.myview.MyProcessBar>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/top_bug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本月预算:"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/top_tv"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                 />
            <TextView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="￥"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:outlineProvider="background"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="最近一笔"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#0089A7"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/center_tv01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/center_tv02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="0.00"
                android:textSize="16sp"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:outlineProvider="background"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="消费走势"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#0089A7"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
        <FrameLayout
            android:id="@+id/xiaofei"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="bottom"></FrameLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
