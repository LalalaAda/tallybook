<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0089a7">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        card_view:cardBackgroundColor="#ffffff"
        android:outlineProvider="background"
        >
        <TextView
            android:id="@+id/aa_bigtype"
            android:layout_width="200px"
            android:layout_height="50dp"
            android:text="支出："
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff0000"/>
        <TextView
            android:id="@+id/aa_coin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="200px"
            android:text="9000.00"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/aa_type"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:text="日常消费"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#64363c"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/aa_mark"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="第一次记录哈哈还不错吧fhajskfhakfajskhfajksfh"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10px"/>
            <TextView
                android:id="@+id/aa_time"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2015年12月15日 周三 12:59"
                android:gravity="right"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>