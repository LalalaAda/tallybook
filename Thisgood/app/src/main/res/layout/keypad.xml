<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.NoActionBar"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:gravity="right">
        <TextView
            android:id="@+id/calc_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1000"
            android:textSize="38sp"
            android:textColor="#080800"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:orientation="vertical">
                <Button
                    android:id="@+id/calc_i7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="7"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background" />
                <Button
                    android:id="@+id/calc_i4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="4"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background" />
                <Button
                    android:id="@+id/calc_i1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="1"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_idot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="."
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:orientation="vertical">
                <Button
                    android:id="@+id/calc_i8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="8"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_i5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="5"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_i2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="2"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_i0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:orientation="vertical">
                <Button
                    android:id="@+id/calc_i9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="9"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_i6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="6"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_i3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="3"
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
                <Button
                    android:id="@+id/calc_ien"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:text="="
                    android:textSize="40sp"
                    android:textColor="#080808"
                    android:outlineProvider="background"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#080808"
            android:orientation="vertical">
            <Button
                android:id="@+id/calc_idel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="del"
                android:textSize="18sp"
                android:background="#080808"
                android:textColor="#ffffff"
                android:outlineProvider="bounds"/>
            <Button
                android:id="@+id/calc_idiv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="÷"
                android:textSize="40sp"
                android:background="#080808"
                android:textColor="#ffffff"
                android:outlineProvider="bounds"/>
            <Button
                android:id="@+id/calc_imu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="×"
                android:textSize="40sp"
                android:background="#080808"
                android:textColor="#ffffff"
                android:outlineProvider="bounds"/>
            <Button
                android:id="@+id/calc_imi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="－"
                android:textSize="40sp"
                android:background="#080808"
                android:textColor="#ffffff"
                android:outlineProvider="bounds"/>
            <Button
                android:id="@+id/calc_iadd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="+"
                android:textSize="40sp"
                android:background="#080808"
                android:textColor="#ffffff"
                android:outlineProvider="bounds"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>