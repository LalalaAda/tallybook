<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="#ffffff"
    android:layout_gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardBackgroundColor="#0089a7"
        android:outlineProvider="background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="查看账目"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cha_big"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="收入"
            android:textSize="22sp"
            android:gravity="center_vertical|left"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/cha_coin"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|right"
            android:text="300.00"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/cha_type"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="类型："
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/cha_time"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="创建时间："
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="备注："
            android:textSize="18sp"
            android:gravity="center_vertical|left"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/cha_beizhu"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:text="这个是备注啊"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cha_xiugai"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="修改"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/cha_shanchu"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/cha_ok"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:background="#ffffff"/>
    </LinearLayout>

</LinearLayout>